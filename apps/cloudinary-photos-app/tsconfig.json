{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strict": false
  },
  "exclude": ["node_modules", "jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": [
    "next-env.d.ts",
    "../../apps/cloudinary-photos-app/.next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "../../apps/cloudinary-photos-app/.next/.next/types/**/*.ts",
    "../../apps/cloudinary-photos-app/dist/.next/types/**/*.ts",
    ".next/types/**/*.ts"
  ]
}
